@model ReportSubmission.Models.ThanhtoanViewModel

@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/_LayoutHome.cshtml";
}
@section title{
    Thanh toán
}
@section menu{

}
<article class="post">
    <header>
        <div class="title">
            <h2><a href="#">Thanh toán</a></h2>
        </div>
        <div class="meta">
            <time class="published" datetime="2017-10-18">October 18, 2017</time>
            <a href="/Home/userInfo" class="author">
                @if (Session["user_name]"] != null)
                {
                    <span class="name">
                        @Html.Raw(Session["user_name"].ToString())
                    </span>
                }
                else
                {
                    <span class="name">Jane Doe</span>
                }

                <img src="/images/avatar.jpg" alt="" />
            </a>
        </div>
    </header>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <div class="row uniform">
            <div class="6u$ 12u$(xsmall)">


                <div class="editor-label">
                    @Html.LabelFor(model => model.ngTTID)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("ngTTID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ngTTID)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.duanID)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("duanID", null, htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.duanID)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.kehoachID)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("kehoachID", null, htmlAttributes: new { @class = "form-control" })


                    @Html.ValidationMessageFor(model => model.kehoachID)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.tongTien)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.tongTien)
                    @Html.ValidationMessageFor(model => model.tongTien)
                </div>

                <p>
                    <input type="submit" value="Create" />
                </p>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</article>