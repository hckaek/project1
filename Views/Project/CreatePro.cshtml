@model ReportSubmission.Models.CreateProViewModel

@{
    ViewBag.Title = "CreatePro";
    Layout = "~/_LayoutHome.cshtml";
}


@section title{
    Create Project
}
@section menu{
}

<article class="post">
    <header>
        <div class="title">
            <h2><a href="#">Tạo dự án</a></h2>
        </div>
        <div class="meta">
            <time class="published" datetime="2017-10-18">October 18, 2017</time>
            <a href="/Home/userInfo" class="author">
                @if (Session["user_name]"] != null)
                {
                    <span class="name">
                        @Html.Raw(Session["user_name"].ToString())
                    </span>
                }
                else
                {
                    <span class="name">Jane Doe</span>
                }

                <img src="/images/avatar.jpg" alt="" />
            </a>
        </div>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <div class="row uniform">
            <div class="6u$ 12u$(xsmall)">
                <div class="editor-label">
                    @Html.LabelFor(model => model.tenDA)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.tenDA)
                    @Html.ValidationMessageFor(model => model.tenDA)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ngayBD)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ngayBD)
                    @Html.ValidationMessageFor(model => model.ngayBD)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ngayKT)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ngayKT)
                    @Html.ValidationMessageFor(model => model.ngayKT)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.userID, "Người quản lý dự án")
                </div>
                <div class="editor-label">
                    @Html.DropDownList("userID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
                </div>

                <p>
                    <input type="submit" value="Create" />
                </p>
            </div>
        </div>   }

</article>
