    <link rel="stylesheet" href="/assets/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <style>
        input, button, select, textarea {
            -webkit-appearance: none;
        }
        .field-validation-error {
            color:red ;
            font-style:italic;
        }
    </style>
    <!--[if lte IE 9]><link rel="stylesheet" href="/assets/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="/assets/css/ie8.css" /><![endif]-->
    
</head>
<body>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <h1><a href="~/Home">Hệ thống quản lý đi công tác</a></h1>
            <nav class="links">
                @{                    
                    if (Session["user_name"] != null)
                    {
                     <ul>

                        
                       <li> Welcome @Session["user_name"]</li>
                       <li> <a href="/Home/userInfo" >Thông tin</a></li>
                       <li><a href="/Home/Logout">Đăng xuất</a></li>

                     </ul>
                    }
                    else { 
                     <ul>
                       <li><a href="/Home/Login">Đăng nhập</a></li>
                     </ul>
                    }  
                }
                
            </nav>
            <nav class="main">
                <ul>
                    <li class="search">
                        <a class="fa-search" href="#search">Search</a>
                        <form id="search">
                            <input type="text" name="query" placeholder="Search" />
                        </form>
                    </li>
                    <li class="menu">
                        <a class="fa-bars" href="#menu">Menu</a>
                    </li>
                </ul>
            </nav>
        </header>

        <!-- Menu NTT -->
        @RenderSection("Menu", true)        
        <!-- End Menu -->
        <!-- Main -->
        <div id="main">
            @RenderBody()
          
            <!-- Pagination -->
            <section id="footer">
                <ul class="icons">
                    <li><a href="#" class="fa-twitter"><span class="label">Twitter</span></a></li>
                    <li><a href="#" class="fa-facebook"><span class="label">Facebook</span></a></li>
                    <li><a href="#" class="fa-instagram"><span class="label">Instagram</span></a></li>
                    <li><a href="#" class="fa-rss"><span class="label">RSS</span></a></li>
                    <li><a href="#" class="fa-envelope"><span class="label">Email</span></a></li>
                </ul>
                <p class="copyright">  <br /> Email: 123@gmail.com. SDT: (04) 3.012345678</p>
            </section>

        </div>

        <!-- Sidebar -->
        <section id="sidebar">

            <!-- Intro -->
            <section id="intro">
                <header>
                    <h2><font color="red">H</font><font color="green">C</font><font color="blue">K</font>- Company</h2>
                    <p></p>
                </header>
            </section>

            <!-- Left menu NTT -->
            @*@if (Session["leftMenu"] == null)
            {*@
                <section style="width:">
                    <ul class="posts " id="#menuleft">
                        <li data-toggle="tooltip" data-placement="right" title="Quản lý dự án">
