                        </li>
                    </ul>
                </section>    
            @* } *@
            @*else
            {
                @Html.Raw(Session["leftMenu"].ToString())
            }*@
            
            <!-- About -->
            <section class="blurb">
                <h2>About</h2>
                <p>
                    Ứng dụng quản lý dự đi công tác và thanh toán công tác phí
                </p>

            </section>

